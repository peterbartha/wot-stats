<% include header %>
<div class="container">
    <div id="profile-details" class="with-margin">
        <div class="row">
            <form class="col s12 m5 offset-m1" method="post">
                <h5><%= user.nickname %></h5>
                <p class="grey-text">Edit your private profile</p>
                <div class="row">
                    <div class="col s12">
                        <p>
                            <strong>World of Tanks ID</strong><br />
                            <%= user.accountId %>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <p>
                            <strong>Email</strong><br />
                            <%= user.email %>
                        </p>
                    </div>
                </div><br />

                <a href="/player/<%= user.nickname %>/edit" class="btn-large waves-effect waves-light red accent-2"><i class="material-icons left">mode_edit</i> Edit</a>
            </form>
            <div class="col s12 m5 offset-m1">
                <div class="card teal darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Delete WotStats profile</span>
                        <p>If you would like to delete your WotStats private profile and/or your saved stats click the buttons below.</p>
                    </div>
                    <div class="card-action">
                        <a href="/player/<%= user.nickname %>/delete">Delete account</a>
                        <a href="/<%= user.nickname %>/statistics/delete">Delete stats</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include footer %>
