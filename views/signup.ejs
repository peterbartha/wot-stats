<% include header %>
  <div class="container">
    <div id="sign-up-section" class="section">
      <div class="row">
        <form class="col s12 m6 offset-m3" method="post">
          <h5>Sign up</h5>
          <p class="grey-text">for daily tracking your World of Tanks stats</p>
          <div class="row">
            <div class="input-field col s12">
              <input id="nickname" name="nickname" type="text" class="validate">
              <label for="nickname">Nickname (in WoT)</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" name="email" type="email" class="validate">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" name="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password-confirm" name="password-confirm" type="password" class="validate">
              <label for="password-confirm">Confirm password</label>
            </div>
          </div>

          <button type="submit" class="btn-large waves-effect waves-light red accent-2">Sign up</button>
          <span>or already have an account? <a href="/signin">Sign in</a></span>
        </form>
      </div>
    </div>
  </div>
<% include footer %>