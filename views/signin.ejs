<% include header %>
  <div class="container">
    <div id="sign-up-section" class="section">
      <div class="row">
        <form class="col s12 m6 offset-m3" method="post">
          <h5>Sign in</h5>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" name="email" type="email" class="validate">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" name="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>

          <button id="sign-up-button" type="submit" class="btn-large waves-effect waves-light red accent-2">Sign in</button>
        </form>
      </div>
    </div>
  </div>
<% include footer %>